<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--시크바 배경-->
    <item android:id="@android:id/background">
        <shape android:shape="line">    <!--선 : 길이6dp -->
            <corners android:bottomRightRadius="@dimen/_15sdp"
                android:bottomLeftRadius="@dimen/_15sdp"
                android:topLeftRadius="@dimen/_15sdp"
                android:topRightRadius="@dimen/_15sdp"

                />
            <stroke android:width="@dimen/_6sdp" android:color="@color/line"/>
        </shape>
    </item>

    <!-- 시크바 배경2 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="line">
                <corners android:bottomRightRadius="@dimen/_15sdp"
                    android:bottomLeftRadius="@dimen/_15sdp"
                    android:topLeftRadius="@dimen/_15sdp"
                    android:topRightRadius="@dimen/_15sdp"

                    />
                <stroke android:width="@dimen/_6sdp" android:color="@color/line" />
            </shape>
        </clip>
    </item>

    <!-- 시크바 프로그래스 -->
    <item android:id="@android:id/progress" >
        <clip>
            <shape android:shape="line">
                <corners android:bottomRightRadius="@dimen/_15sdp"
                android:bottomLeftRadius="@dimen/_15sdp"
                android:topLeftRadius="@dimen/_15sdp"
                android:topRightRadius="@dimen/_15sdp"

                />
                <stroke android:width="@dimen/_6sdp" android:color="@color/home_title_text_s" />
            </shape>
        </clip>
    </item>

</layer-list>
