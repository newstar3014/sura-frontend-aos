<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperCarX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">@color/trn</item>
        <item name="colorControlActivated">@color/trn</item>
        <item name="colorControlHighlight">@color/trn</item>

        <!-- Status bar color. -->
        <!--        <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/background_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--        <item name="android:colorBackground">@color/black</item>-->
        <item name="android:windowSharedElementEnterTransition" tools:igonore="NewApi">
            @android:transition/move
        </item>
        <item name="android:windowSharedElementExitTransition" tools:igonore="NewApi">
            @android:transition/move
        </item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/trn</item>                                <!-- 배경 -->

        <item name="android:textColorPrimary">@color/main_tab_bar_select</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/main_tab_bar_text_color</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@color/main_tab_bar_select</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round</item>
    </style>

    <style name="RoundedCornersDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">@dimen/dimen_14</item>
    </style>

    <style name="textinput_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <!--        <item name="background">@drawable/btn_login_round_stroke</item>-->
        <!--        <item name="android:windowActivityTransitions">true</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxStrokeColor">@color/trn</item>

    </style>
    <style name="scrollbar_shape_style" parent="android:Widget">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>

        <item name="android:scrollbarThumbVertical">@drawable/view_list_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/view_list_track</item>
        <item name="android:scrollbarSize">@dimen/dimen_8</item>
    </style>
    <style name="textinput_layout_join" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <!--        <item name="background">@drawable/btn_login_round_stroke</item>-->
        <!--        <item name="android:windowActivityTransitions">true</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxStrokeColor">@color/white_30</item>

    </style>

    <style name="textview_english" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textview_english_title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/optimus_princeps_pemi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textview_inter_title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="textview_inter" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Theme.SuperCarX.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.SuperCarX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Popupset" parent="Widget.AppCompat.PopupMenu" />


    <style name="maintablayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@color/trn</item>
        <item name="iconGravity">textStart</item>
        <item name="tabPadding">0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>
    <style name="hometablayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="tabSelectedTextColor">@color/main_color</item>
        <item name="tabTextColor">@color/white_40</item>
        <item name="tabIndicatorColor">@color/main_color</item>
        <item name="iconGravity">textStart</item>
        <item name="tabPadding">0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@drawable/tab_indicatoer_color</item>
        <item name="tabTextAppearance">@style/optimusfontstyle</item>
    </style>
    <style name="CustomCardViewStyle2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners2</item>
    </style>
    <style name="basetablayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:backgroundTint">@color/white_40</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white_30</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="tabPadding">0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/interboldfontstyle</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_13sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_13sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>
    <style name="contablayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:backgroundTint">@color/white_40</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white_40</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="tabPadding">0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabTextAppearance">@style/interfontstyle</item>
    </style>
    <style name="optimusfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/optimus_princeps</item>
        <item name="android:textColor">@color/white_40</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="interboldfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white_40</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
    <style name="interfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white_40</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
</resources>