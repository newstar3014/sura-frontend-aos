<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.text.Html" />
        <import type="android.view.View" />
    </data>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.ServiceCenterActivity">

        <!--    타이틀바-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/black">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:text="탈퇴"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:paddingTop="20dp"
            >


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llInfo1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:paddingVertical="30dp"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="탈퇴 신청 검토중"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:layout_marginBottom="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2"
                        android:text="현재 실수 또는 고의적인 탈퇴를 방지하기 위하여 검토 중입니다. 탈퇴 신청이 완료되면 이 화면에 탈퇴하기 버튼이 활성화됩니다. 탈퇴하기 버튼을 누르시면 최종적으로 탈퇴 처리가 완료됩니다. 다시 계정을 복원하기를 원하시면 탈퇴 취소하기 버튼을 눌러주세요!"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/_9sdp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llInfo2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:paddingVertical="30dp"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="탈퇴 신청 확인"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:layout_marginBottom="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2"
                        android:text="현재 실수 또는 고의적인 탈퇴를 방지하기 위하여 검토 중입니다. 탈퇴 신청이 완료되면 이 화면에 탈퇴하기 버튼이 활성화됩니다. 탈퇴하기 버튼을 누르시면 최종적으로 탈퇴 처리가 완료됩니다. 다시 계정을 복원하기를 원하시면 탈퇴 취소하기 버튼을 눌러주세요!"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/_9sdp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llInfo3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:paddingVertical="30dp"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="탈퇴가 취소되었습니다."
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:layout_marginBottom="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2"
                        android:text="회원님, 복귀하심을 환영합니다!\n로그아웃 후 재 로그인 하시면\n다시 정상적으로 이용가능합니다."
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/white_80"
                        android:textSize="@dimen/_9sdp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_withdraw"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/inter_bold"
                android:text="@string/withdraw"
                android:textColor="@color/gray"
                android:textSize="@dimen/_11sdp"
                android:layout_marginBottom="20dp"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_restore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/join_bottom_bar"
                android:paddingVertical="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/inter_bold"
                    android:text="탈퇴 취소하기"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_logout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/join_bottom_bar"
                android:paddingVertical="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/inter_bold"
                    android:text="로그아웃 하기"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>
