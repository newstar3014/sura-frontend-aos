<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_20"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:textSize="@dimen/_9sdp"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"
        android:background="@drawable/coner_rounder_black_272727"
        style="@style/textview_inter_title" />
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_15sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/bottom_ballon_triangle"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignEnd="@+id/tv_question"
        android:layout_gravity="end"
        android:visibility="visible"
        android:layout_above="@+id/tv_question"/>

</LinearLayout>
</layout>