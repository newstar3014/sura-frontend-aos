                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_11"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:fontFamily="@font/inter_bold"
                        android:text="이 차량의 장점과 단점을 알려주세요!"
                        android:textColor="@color/white_70"
                        android:textSize="@dimen/_11sdp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_mmi_third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@{viewModel.isMmiThirdEdit() == true ? @drawable/coner_round_edit_strok_s_bg :@drawable/coner_round_edit_strok_bg}"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/textinput_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_30"
                            android:background="@color/trn"
                            android:gravity="center_vertical"
                            android:padding="2dp"
                            app:endIconMode="none"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_mmi_third"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/trn"
                                android:gravity="center_vertical"
                                android:hint="예) 처음엔 좀 빨랐지만...세월 앞에선 장사없죠."
                                android:padding="2dp"
                                android:singleLine="true"
                                android:text="@={viewModel.textIsMmithird}"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white_50"
                                android:textSize="@dimen/_10sdp"
                                tools:ignore="Deprecated" />


                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <LinearLayout
                        android:id="@+id/ll_add_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    </LinearLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_addlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_32"

                        android:background="@drawable/coner_round_post_bg_dash"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.my_sub_info.size() &lt; 10 ? View.VISIBLE:View.GONE}">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:src="@drawable/imgplus_56px" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_11"
                            android:fontFamily="@font/inter_medium"
                            android:text="차량 사진을 추가로 더 등록하시겠어요?"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_6"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:text="최대 10장의 사진을 소개글과 함께\n첨부하실 수 있습니다!"
                            android:textColor="@color/white_70"
                            android:textSize="@dimen/_9sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>
            <!--    타이틀바-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:background="@color/black">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ar_left_24px"
                    android:paddingVertical="@dimen/dimen_5"
                    android:paddingHorizontal="@dimen/dimen_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/optimus_princeps_pemi_bold"
                    android:text="내 차 글쓰기"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <ImageView
                    android:id="@+id/iv_save"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_save_check"
                    android:visibility="@{viewModel.viptype.equals(`글수정`) ? View.GONE : View.VISIBLE}"
                    android:paddingVertical="@dimen/dimen_5"
                    android:paddingHorizontal="@dimen/dimen_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52"
                android:layout_alignParentBottom="true"
                android:background="@color/join_bottom_bar"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
